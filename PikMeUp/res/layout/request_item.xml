<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@color/darkgrey" >

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/relativeStart"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivIcon"
        android:paddingLeft="6dp"
        android:paddingRight="1dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bar" />

        <TextView
            android:id="@+id/txtStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:lines="6"
            android:layout_margin="5dp"
            android:singleLine="false"
            android:text="Start St San Francisco, CA 94105"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightgrey"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:text="Mar 12  5:30pm"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightgrey"
            android:textSize="10pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeEnd"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="1dp"
        android:paddingRight="6dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bar" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:gravity="center"
            android:paddingRight="3dp"
            android:text="1hr 23min"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightgrey"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/txtEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:lines="6"
            android:singleLine="false"
            android:text="End St San Francisco, CA 94105"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/lightgrey"
            android:textSize="6pt" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_toLeftOf="@+id/relativeEnd"
        android:layout_toRightOf="@+id/relativeStart"
        android:scaleType="fitCenter"
        android:src="@drawable/fromto" />

</RelativeLayout>